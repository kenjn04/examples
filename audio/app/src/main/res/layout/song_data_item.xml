<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable name="position" type="int" />
        <variable
            name="song"
            type="com.example.hmi.audio.common.Song"
        />
        <variable
            name="listener"
            type="com.example.hmi.audio.view.SongListAdapter.SongSelectedListener"
        />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@{song.track}"
            android:textSize="24sp"
            android:onClick="@{(view) -> listener.onSongSelected(view, position)}"
        />

    </LinearLayout>

</layout>
