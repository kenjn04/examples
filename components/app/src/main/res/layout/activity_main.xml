<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <TextView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
    />

    <TextView
        android:id="@+id/list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
    />

    <jp.co.sample.componentslibrary.toggle.OnOffIndicator
        android:id="@+id/indicator"
        android:layout_width="100dp"
        android:layout_height="50dp"
    />

    <jp.co.sample.componentslibrary.toggle.ToggleSwitchLevel2
        android:id="@+id/toggle2"
        android:layout_width="100dp"
        android:layout_height="50dp"
    />

    <jp.co.sample.componentslibrary.toggle.ToggleSwitchLevel3
        android:id="@+id/toggle3"
        android:layout_width="100dp"
        android:layout_height="50dp"
    />

    <jp.co.sample.componentslibrary.slider.Slider
        android:id="@+id/slider"
        android:layout_width="300dp"
        android:layout_height="50dp"
    />

    <Spinner
        android:id="@+id/spinner"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
    />

</LinearLayout>