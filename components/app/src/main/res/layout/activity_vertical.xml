<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list.VerticalListActivity">

    <jp.co.sample.componentslibrary.list.NRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="30dp"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:scrollbarThumbHorizontal="@drawable/fast_scroll_thumb"
        android:scrollbarTrackHorizontal="@drawable/fast_scroll_track"
        android:scrollbarThumbVertical="@drawable/fast_scroll_thumb"
        android:scrollbarTrackVertical="@drawable/fast_scroll_track"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        />

    <Button
        android:id="@+id/vertical"
        android:text="HORIZONTAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        />

</FrameLayout>